  @override
  void dispose() {
    otpTimer?.cancel();
    stopTimer?.cancel();
    super.dispose();
  }

  String generateOtpCode() {
    return (100000 + Random().nextInt(900000)).toString();
  }

  String getCurrentTime() {
    return DateFormat('hh:mm a', 'ar_SA').format(DateTime.now());
  }

  String getCurrentDate() {
    return DateFormat('yyyy MMMM d', 'ar_SA').format(DateTime.now());
  }

  void startOtpSimulation() {
    addNewOtpMessage();

    otpTimer?.cancel();
    stopTimer?.cancel();

    // Add new messages every 5-15 seconds
    otpTimer = Timer.periodic(
      Duration(seconds: 5 + Random().nextInt(10)),
      (_) => addNewOtpMessage(),
    );

    // Stop after 1 minute
    stopTimer = Timer(const Duration(minutes: 1), () {
      otpTimer?.cancel();
      otpTimer = null;
    });
  }

  void addNewOtpMessage() {
    final random = Random();
    final sender = otpSenders[random.nextInt(otpSenders.length)];
    final purpose = sender.purposes[random.nextInt(sender.purposes.length)];

    final message = OtpMessage(
      id: DateTime.now().millisecondsSinceEpoch,
      sender: sender.name,
      senderIcon: sender.icon,
      code: generateOtpCode(),
      purpose: purpose,
      time: getCurrentTime(),
      date: getCurrentDate(),
    );

    ref.read(safeGateOtpProvider.notifier).addOtpMessage(message);
  }

